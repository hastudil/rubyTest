<div class="container-xl">
  <div class="table-responsive">
    <div class="table-wrapper">
      <h3>Category: <b><%= @category.name %></b></h3>

      <div>
        <strong>Manage Keywords</strong>
        <%= render "keywords/form" %>
        
        <% if @category.keywords.count > 0 %>
        <div class="container border bg-light">
          <div class="row">
            <% @category.keywords.order(:name).each do |keyword| %>
            <div class="col-md-4 p-3">
              <%= keyword.name %>
              <%= link_to "Delete", [@category, keyword], remote: true, method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure you want to delete this keyword?' } %>
            </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>

      <div class="padding_top25">
        <%#= link_to "Edit", edit_category_path(@category), class:"btn btn-success" %>
        <%= link_to "Back", categories_path, class:"btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>